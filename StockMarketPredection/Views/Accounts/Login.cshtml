@model User

@{
    ViewData["Title"] = "Login";
}

<div class="container">

    <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                    <div class="card mb-3">

                        <div class="card-body">

                            <div class="pt-4 pb-2">
                                <h5 class="card-title text-center pb-0 fs-4">Login to Your Account</h5>
                            </div>

                            <form class="row g-3" asp-action="Login" method="post">

                                <div class="col-12">
                                    <label asp-for="Email" class="form-label">Email</label>
                                    <input asp-for="Email" class="form-control" required>
                                </div>

                                <div class="col-12">
                                    <label asp-for="Password" class="form-label">Password</label>
                                    <input type="password" asp-for="Password" class="form-control" required>
                                </div>

                                <div class="col-12">
                                    <span class="text-danger">@ViewBag.ErrorMsg</span>
                                </div>

                                <div class="col-12 text-center">
                                    <input type="submit" class="btn btnrrsv" value="Login" />
                                </div>

                            </form>

                        </div>

                    </div>

                    <p>Don't have an account? <a asp-controller="Accounts" asp-action="Register">Register Now</a></p>

                </div>
            </div>
        </div>

    </section>

</div>